    <script>
        function closeErrorBox(){
            document.querySelector('#error-box').style.display = "none"
        }
        var redirectUrl = '<%=redirectUrl%>'
        console.log(redirectUrl)
        
        document.querySelector('form').addEventListener('submit', async (event)=> {
            event.preventDefault(); // Impede o envio do formulário

            // Obtém o login e a senha digitados pelo usuário
            var usuario = document.querySelector('#login').value;
            var senha = document.querySelector('#senha').value;
            //const url = `/?user= ${encodeURIComponent(usuario)}`
            const url = `/`
            // Envia a requisição para o servidor
            const response = await fetch('/login/eftuar_login', {
                method: 'POST',
                headers: {
                'Content-Type': 'application/json'
                },
                body: JSON.stringify({ usuario: usuario, senha: senha })
            });

            const data = await response.json();

            if(data.success){
                //Usuário e senha corretas
                //window.location.href = url;

                // Redirecione de volta para a URL da página anterior
                if(redirectUrl.includes('#')){
                    const redirect = `/roupa?codReferencia=${encodeURIComponent(redirectUrl)}`;
                    window.location.href = redirect;
                }else{
                    window.location.href = redirectUrl;
                }

            }else{
                // Usuario e senha Incorretas
                document.querySelector('#error-message').textContent = data.message;
                document.querySelector('#error-box').style.display = "block ";
            }
        });


    </script>
