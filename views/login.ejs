    <main id="main_login">

        <div id="tela_login">
            <div id="area_Logo">
                <img src="../Imagens/favicon.ico" alt="">
            </div>

            <form action="/login/eftuar_login" method="post">
                <div id="dados_login">
                    <span>Login:</span>
                    <div class="campo">
                        <input type="text" name="usuario" placeholder="login" id="login" required>
                    </div>
                </div>
                <div id="dados_senha">
                    <span>Senha:</span>
                    <div class="campo">
                        <input type="password" name="senha"  placeholder="" id="senha" required minlength="6">
                    </div>
                </div>
                <a href="" id="EsqueceuSenha">Esqueceu sua senha?</a>
                <div id="area_btn">
                    <button type="submit" value="Logar" id="btnLogin">Logar</button>
                </div>
            </form>
        </div>

        <div id="error-box">
            <p id="error-message"></p>
            <button id="error-ok" onclick="closeErrorBox()">OK</button>
        </div>

        
        
    </main>

    <footer class="footer">
